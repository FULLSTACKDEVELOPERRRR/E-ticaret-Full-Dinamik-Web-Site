@*
	form_controls.html'den aldık
	Horizantal Form Height Sizing
*@

@model Supplier
@{
	ViewData["Title"] = "SupplierEdit";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- BEGIN PAGE CONTENT-->
<div class="row">
	<div class="col-md-2"></div>

	<div class="col-md-8">

		<!-- BEGIN SAMPLE FORM PORTLET-->
		<div class="portlet box purple ">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-gift"></i> MARKA DÜZELTME FORMU
				</div>
				<div class="tools">
					<a href="" class="collapse">
					</a>
					<a href="#portlet-config" data-toggle="modal" class="config">
					</a>
					<a href="" class="reload">
					</a>
					<a href="" class="remove">
					</a>
				</div>
			</div>
			<div class="portlet-body form">
				<form class="form-horizontal" role="form" action="/Admin/SupplierEdit" method="post">
					<div class="form-body">

						<div class="form-group">
							<label class="col-md-3 control-label">Marka Seçiniz</label>
							<div class="col-md-9">

								

							</div>
						</div>

						<div class="form-group">
							<label class="col-md-3 control-label" asp-for="BrandName"></label>
							<div class="col-md-9">
								<input type="text" class="form-control input-lg" placeholder="MARKA ADI GİRİNİZ" asp-for="BrandName">
								<span asp-validation-for="BrandName" class="text-danger"></span>
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label" asp-for="PhotoPath"></label>
							<div class="col-md-9">
								<input type="file" asp-for="PhotoPath" class="form-control input-lg" value ="@Model.PhotoPath"/>
								<span asp-validation-for="PhotoPath" class="text-danger"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-md-3 control-label" asp-for="Active"></label>
							<div class="col-md-9">
								<input type="checkbox" class="form-control input-lg" asp-for="Active">
								<span asp-validation-for="Active" class="text-danger"></span>
							</div>
						</div>


						<input type="hidden" asp-for="SupplierID" />



					</div>
					<div class="form-actions right1">
						<a asp-action="SupplierIndex" class="btn btn-primary">MARKA LİSTESİ</a>
						<input type="submit" name="name" value="GÜNCELLE" class="btn btn-success" />
					</div>
				</form>
			</div>
		</div>
		<!-- END SAMPLE FORM PORTLET-->

	</div>
</div>

<!-- END PAGE CONTENT-->
